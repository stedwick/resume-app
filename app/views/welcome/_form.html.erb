<%= form_tag "/search", authenticity_token: false do %>
  <div class="form-group">
    <div class="input-group">
      <!-- <%= label_tag :name, "Name:" %> -->
      <%= text_field_tag :name, nil, placeholder: "Your name", class: "form-control" %>
      <div class="input-group-append">
        <span class="input-group-text"><%= svg_icon "person" %></span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <!-- <%= label_tag :email, "Email:" %> -->
      <%= text_field_tag :email, nil, placeholder: "Your email address", class: "form-control" %>
      <div class="input-group-append">
        <span class="input-group-text"><%= svg_icon "email" %></span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <!-- <%= label_tag :message, "Message:" %> -->
    <%= text_area_tag :message, nil, placeholder: "Your message to me", class: "form-control" %>
  </div>
  <div class="form-group row px-3">
    <%= submit_tag "Send Email", class: "btn btn-primary col-12" %>
  </div>
<% end %>
