<div class="bg-info text-light" id="hire-me">
  <div class="container py-3">
    <div class="row py-3">
      <div class="col-12">
        <h2 class="text-center mb-0">Hire Me</h2>
      </div>
    </div>
  </div>
</div>

<div class="bg-white text-dark">
  <div class="container pt-3" id="contact">
    <div class="row py-3 justify-content-around">
      <div class="col-12 col-xl-11 mb-3">
        <%= markdown @person.contact_blurb %>
      </div>

      <div class="col-12 col-md-6 col-xl-5 contactInfo mb-3">
        <h4 class="text-center">My Contact Info</h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= svg_icon "person" %> <%= @person.name %>
          </li>
          <li class="list-group-item">
            <%= svg_icon "mapmarker" %> <%= @person.location %>
          </li>
          <li class="list-group-item">
            <%= svg_icon "phone" %> <%= link_to @person.phone, "tel:#{@person.phone}" %>
          </li>
          <li class="list-group-item text-truncate">
            <%= svg_icon "email" %> <%= link_to @person.email, "mailto:#{@person.email}" %>
          </li>
          <li class="list-group-item text-truncate">
            <%= svg_icon "linkedin" %> <%= link_to @person.linkedin, @person.linkedin %>
          </li>
          <li class="list-group-item">
            <%= svg_icon "pdf" %>
            <%= link_to "Download my resume", asset_path(@person.resume_file), download: @person.resume_file %>
          </li>
          <li class="list-group-item">
            <%= svg_icon "vcard" %>
            <%= link_to "Download my vCard", asset_path(@person.vcard_file), download: @person.vcard_file %>
          </li>
          <li class="list-group-item">
          </li>
        </ul>
      </div>

      <div class="col-12 col-md-6 col-xl-5">
        <h4 class="text-center">Send Me a Message</h4>
        <%= render "form" %>
      </div>

    </div>
  </div>
</div>
