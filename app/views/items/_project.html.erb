<div class="col-12 pt-3">
  <div class="media">
    <%= link_to svg_icon(project.svg, class: "mr-3"), project.link %>
    <div class="media-body">
      <h5><%= link_to project.name, project.link %></h5>
      <p><%= project.blurb %></p>
      <p><%= link_to project.description, project.link, class: "btn btn-sm #{project.description.include?('View') ? 'btn-secondary' : 'btn-outline-light'}" %></p>
    </div>
  </div>
</div>
